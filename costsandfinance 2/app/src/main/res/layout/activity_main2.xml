<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#808080">

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="650dp"
        android:text="расходы"
        android:textColor="#000"
        android:backgroundTint="#ffffff"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="650dp"
        android:text="главная"
        android:textColor="#000"
        android:backgroundTint="#ffffff"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="285dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="#ffffff"
        android:text="доходы"
        android:textColor="#000" />
    <Button
        android:id="@+id/button4"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#ffffff"
        android:text="график"
        android:textColor="#000" />

    <TextView
        android:id="@+id/goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="50dp"
        android:text="продукты"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/transport"
        android:layout_width="10000000dp"
        android:layout_height="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="170dp"
        android:text="транспорт"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/shops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="покупки"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="312dp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="здоровье"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="308dp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="семья"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="60dp"
        android:textColor="#000"
        />

    <ImageButton
        android:id="@+id/goods1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape_segment"
        app:backgroundTint="#FFFFFF"
        android:layout_marginHorizontal="53dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@drawable/goods"
        />

    <ImageButton
        android:id="@+id/transport1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_shape_segment"
        android:scaleType="fitCenter"
        android:padding="3dp"
        android:src="@drawable/transport"

        app:backgroundTint="#FFFFFF"
        />
    <ImageButton
        android:id="@+id/shops1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="310dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_shape_segment"
        app:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/shops"
        />
    <ImageButton
        android:id="@+id/family1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="53dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/button_shape_segment"
        app:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:src="@drawable/family"
        />

    <ImageButton
        android:id="@+id/health1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="310dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/button_shape_segment"
        android:scaleType="fitCenter"
        android:src="@drawable/health"
        app:backgroundTint="#FFFFFF" />
    <ImageButton
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/button_shape_segment"
        android:src="@drawable/add"
        app:backgroundTint="#FFFFFF" />
    <TextView
        android:id="@+id/add1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="460dp"
        android:text="добавить:"
        android:textColor="#000"
        android:backgroundTint="#ffffff"
        />
    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:text="сумма:"
        android:textSize="35dp"
        android:textColor="#000"
        android:backgroundTint="#ffffff"
        />

    <TextView
        android:id="@+id/goods11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="85dp"
        android:layout_marginTop="200dp" />
</RelativeLayout>